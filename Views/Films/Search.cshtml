@model IEnumerable<AdrianWoronaProject91511.Models.Films>

<table>
    <thead>
        <tr>
            <th>Tytuł filmu</th>
            <th>Reżyser</th>
            <th>Opis</th>
            <th>Cena</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var film in Model.CategoryFilms)
        {
            <tr>
                <td>@film.Title</td>
                <td>@film.Director</td>
                <td>@film.Desc</td>
                <td>@film.Price</td>
                <td>
                    <a href="@Url.Action("Details", "Films", new {filmId = film.Id})">&#128270;</a>
                </td>
            </tr>
        }
    </tbody>
</table>
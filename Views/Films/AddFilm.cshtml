@model AdrianWoronaProject91511.ViewModels.AddFilmViewModel


@using(Html.BeginForm("AddFilm", "Films", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <form>
        <div class="form-group">
            @Html.LabelFor(m => m.NewFilm.Title, "Podaj tytuł")
            @Html.TextBoxFor(m => m.NewFilm.Title, new { @class = "form-control", @required = true})
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.NewFilm.Director, "Podaj reżysera")
            @Html.TextBoxFor(m => m.NewFilm.Director, new { @class = "form-control", @required = true})
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.NewFilm.Desc, "Podaj opis")
            @Html.TextBoxFor(m => m.NewFilm.Desc, new { @class = "form-control", @required = true})
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.NewFilm.Price, "Podaj cenę")
            @Html.TextBoxFor(m => m.NewFilm.Price, new { @class = "form-control", @required = true, @type = "number", @min="0.01", @max = "259,99", @step="0,01"})
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Poster, "Dodaj obrazek")
            @Html.TextBoxFor(m => m.Poster, new { @class = "form-control-file", @required = true, @type = "file"})
        </div>

        <label>Wybierz kategorię</label>
        <br>
        <div class="form-check">
            @foreach (var kategoria in Model.Categories)
            {
                @Html.RadioButtonFor(m => m.NewFilm.CategoryId, kategoria.Id, new {@class = "form-check-input"})
                @Html.LabelFor(m => m.NewFilm.CategoryId, kategoria.Name, new {@class = "form-check-label"})
                <br />
            }
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Dodaj film</button>
    </form>
}
